{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off",
        "useLiteralKeys": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["debug", "info", "warn", "error"]
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "useGenericFontNames": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "include": ["src/**/*", "frontend/**/*", "*.ts", "*.js", "*.tsx", "*.jsx"],
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      ".pnpm-store/**",
      "**/.pnpm/**",
      "_proxy/**",
      "frontend/preloads/**"
    ]
  }
}
